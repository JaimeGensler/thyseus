{
	"name": "thyseus",
	"version": "0.12.1",
	"description": "An archetypal Entity Component System for the modern web",
	"author": "Jaime Gensler",
	"license": "MIT",
	"type": "module",
	"files": [
		"dist",
		"types"
	],
	"module": "./dist/index.js",
	"main": "./src/index.umd.cjs",
	"types": "./dist/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		"./src/*": "./src/*",
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		},
		"./types": {
			"types": "./src/types.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/JaimeGensler/thyseus"
	},
	"scripts": {
		"start": "vite",
		"build": "vite build && tsup src/index.ts --dts-only",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"keywords": [
		"ecs",
		"entity component system",
		"typescript",
		"game engine",
		"game dev",
		"thread",
		"threading",
		"multithreaded",
		"multithreading",
		"archetype",
		"archetypal",
		"table"
	],
	"dependencies": {
		"esm-env": "^1.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@vitest/coverage-c8": "^0.31.4",
		"@vitest/web-worker": "^0.31.4",
		"tsup": "^6.7.0",
		"typescript": "^5.1.3",
		"vite": "^4.3.9",
		"vitest": "^0.31.4"
	}
}
